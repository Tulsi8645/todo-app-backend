{
  "name": "todo-app-backend",
  "version": "1.0.0",
  "description": "Production-grade Todo App Backend with Express, Mongoose, JWT, Zod, and Swagger",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:unit": "NODE_ENV=test jest tests/unit --detectOpenHandles --forceExit",
    "test:e2e": "NODE_ENV=test jest tests/e2e --detectOpenHandles --forceExit",
    "test:coverage": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit"
  },
  "keywords": [
    "todo",
    "express",
    "mongoose",
    "jwt",
    "api",
    "rest"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.4",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}